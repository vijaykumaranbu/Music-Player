<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.MusicPlayer">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="CardViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_22sdp</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="indicatorSize">@dimen/_28sdp</item>
        <item name="fontFamily">@font/rubik_bold</item>
    </style>

    <style name="seekbarTheme">
        <item name="android:progressDrawable">@drawable/background_seekbar</item>
        <item name="android:thumb">@drawable/background_seekbar_thumb</item>
        <item name="android:minHeight">@dimen/_2sdp</item>
        <item name="android:maxHeight">@dimen/_2sdp</item>
    </style>

</resources>