<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.MusicPlayer">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CardViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_22sdp</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="indicatorSize">@dimen/_28sdp</item>
    </style>

    <style name="seekbarTheme">
        <item name="android:progressDrawable">@drawable/background_seekbar</item>
        <item name="android:thumb">@drawable/background_seekbar_thumb</item>
        <item name="android:minHeight">@dimen/_2sdp</item>
        <item name="android:maxHeight">@dimen/_2sdp</item>
    </style>

    <style name="TextStyleBold" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/popins_bold</item>
        <item name="android:fontFamily">@font/popins_bold</item>
    </style>

    <style name="TextStyleMedium" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextStyleMusic" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/alatsi</item>
        <item name="android:fontFamily">@font/alatsi</item>
    </style>

    <style name="TextStyleTab" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/popins_bold</item>
        <item name="android:fontFamily">@font/popins_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

</resources>